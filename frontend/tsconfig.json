{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "app/**/*", // Adjust this path based on your project structure
    "../nfr-test/**/*" // Include your test files if they are outside the frontend folder
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "es5",
    // "target": "ES2022",
    "module": "commonjs",
    // "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },

}
